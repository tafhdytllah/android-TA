<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_list_iuran_bulanan"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/color_white"
    android:gravity="center"
    android:padding="15dp">


    <ImageView
        android:id="@+id/iv_ImageView_iuran_bulanan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/list_iuran"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL_kiri"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="No Rumah"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nama" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nomor KK" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_tengah"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LL_kiri">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_below="@id/tv_nama"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_below="@id/tv_no_rumah"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_below="@id/tv_no_kk"
                android:layout_marginLeft="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_below="@id/tv_no_hp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="18sp"
                android:textColor="#a9a9a9"
                android:textStyle="bold"
                android:layout_below="@id/tv_gmail"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_kanan"
            android:layout_toRightOf="@id/LL_tengah"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/tv_no_rumah_iuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="No Rumah"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nama_kk_iuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nama" />

            <TextView
                android:id="@+id/tv_no_kk_iuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nomor KK" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>