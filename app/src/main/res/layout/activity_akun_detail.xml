<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/textColorWhite"
    tools:context="com.tafh.tugasakhir.akun.AkunDetailActivity">

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/iv_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_below="@+id/iv_ImageView"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColorWhite">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/iv_ImageView"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LL_kiri"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Rumah"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_nama"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No KK"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_rumah"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Hp"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_kk"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_hp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_gmail"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_tengah"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/LL_kiri">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_nama"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_rumah"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_kk"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_hp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_gmail"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_kanan"
                android:layout_toRightOf="@id/LL_tengah"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_no_rumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Rumah"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_nama"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/tv_no_kk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No KK"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_rumah"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/tv_no_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Hp"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_kk"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/tv_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:textSize="18sp"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_no_hp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="#a9a9a9"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_gmail"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/btn_lupa_password"
                android:layout_margin="8dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorWhite"
                android:background="@drawable/button_main_background"
                android:text="Lupa Password"/>
            <Button
                android:id="@+id/btn_hapus"
                android:layout_margin="8dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorWhite"
                android:background="@drawable/button_red_background"
                android:text="Hapus"/>
            <Button
                android:id="@+id/btn_ubah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorWhite"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:background="@drawable/button_main_background"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>